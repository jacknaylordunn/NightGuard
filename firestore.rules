
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function getAuthUser() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function isOwner(companyId) {
      return get(/databases/$(database)/documents/companies/$(companyId)).data.ownerId == request.auth.uid;
    }
    
    function isSuperAdmin() {
      return getAuthUser().data.role == 'superadmin';
    }

    function isCompanyStaff(companyId) {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             getAuthUser().data.companyId == companyId &&
             getAuthUser().data.status == 'active';
    }

    // --- Invites (Public Read for Join lookup) ---
    match /invites/{code} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // --- Users Collection ---
    match /users/{userId} {
      // Allow user to read/write their own profile
      allow get, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow listing users if the requester belongs to the same company OR is superadmin
      allow list: if request.auth != null && (
                    isSuperAdmin() || 
                    (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                     getAuthUser().data.companyId == resource.data.companyId)
                  );
    }

    // --- Support Tickets ---
    match /support_tickets/{ticketId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (
                    isSuperAdmin() ||
                    resource.data.companyId == getAuthUser().data.companyId
                  );
      allow update: if request.auth != null && (
                    isSuperAdmin() ||
                    resource.data.companyId == getAuthUser().data.companyId
                  );
    }

    // --- Companies Collection ---
    match /companies/{companyId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (isOwner(companyId) || isSuperAdmin());

      // --- Venues ---
      match /venues/{venueId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && (isOwner(companyId) || isSuperAdmin());

        match /shifts/{shiftId} {
           // Floor staff can read shifts to get compliance logs, but UI hides sensitive data.
           // Ideally, compliance logs should be a subcollection for stricter security,
           // but keeping architecture consistent for this feature request.
           allow read, write: if isCompanyStaff(companyId) || isSuperAdmin();
        }
        
        match /alerts/{alertId} {
           allow read, write: if isCompanyStaff(companyId) || isSuperAdmin();
        }
        
        // --- Venue Specific Configs ---
        match /config/{configId} {
           allow read: if isCompanyStaff(companyId);
           allow write: if request.auth != null && (isOwner(companyId) || isSuperAdmin());
        }
      }
      
      // --- Watchlist / Banned People ---
      match /banned_people/{banId} {
         // Security and Owner/Manager only, NOT floor staff
         allow read, write: if (isCompanyStaff(companyId) && getAuthUser().data.role != 'floor_staff') || isSuperAdmin();
      }
    }
    
    // --- Customers (Stripe) ---
    match /customers/{uid} {
      allow read, write: if request.auth.uid == uid;
      match /checkout_sessions/{id} {
        allow read, write: if request.auth.uid == uid;
      }
      match /subscriptions/{id} {
        allow read: if request.auth.uid == uid;
      }
      match /payments/{id} {
        allow read: if request.auth.uid == uid;
      }
    }
  }
}

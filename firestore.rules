
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function getAuthUser() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    // Check if the requester is an Owner of the target resource's company
    // Relies on the Requester's User Profile having role='owner' and matching companyId
    function isRequesterOwnerOf(targetCompanyId) {
      let userData = getAuthUser().data;
      return userData.role == 'owner' && userData.companyId == targetCompanyId;
    }
    
    function isSuperAdmin() {
      return getAuthUser().data.role == 'superadmin';
    }

    function isCompanyStaff(companyId) {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             getAuthUser().data.companyId == companyId &&
             getAuthUser().data.status == 'active';
    }

    // --- Invites (Public Read for Join lookup) ---
    match /invites/{code} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // --- Users Collection ---
    match /users/{userId} {
      // Read/List: Allow if self, same company, or superadmin
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        (getAuthUser().data.companyId == resource.data.companyId) ||
        isSuperAdmin()
      );

      // Create: Allow all auth users (registration)
      allow create: if request.auth != null;

      // Update: Self, Company Owner, or SuperAdmin
      allow update: if request.auth != null && (
        request.auth.uid == userId ||
        isRequesterOwnerOf(resource.data.companyId) ||
        isSuperAdmin()
      );

      // Delete: Company Owner or SuperAdmin
      allow delete: if request.auth != null && (
        isRequesterOwnerOf(resource.data.companyId) ||
        isSuperAdmin()
      );
    }

    // --- Support Tickets ---
    match /support_tickets/{ticketId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (
                    isSuperAdmin() ||
                    resource.data.companyId == getAuthUser().data.companyId
                  );
      allow update: if request.auth != null && (
                    isSuperAdmin() ||
                    resource.data.companyId == getAuthUser().data.companyId
                  );
    }

    // --- Companies Collection ---
    match /companies/{companyId} {
      allow read: if true;
      allow create: if request.auth != null;
      
      // Update: Owner (checked via isRequesterOwnerOf logic equivalent or direct check) or SuperAdmin
      // Using direct check here for Company Doc update
      allow update: if request.auth != null && (
        (getAuthUser().data.role == 'owner' && getAuthUser().data.companyId == companyId) || 
        isSuperAdmin()
      );

      // --- Venues ---
      match /venues/{venueId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && (
          (getAuthUser().data.role == 'owner' && getAuthUser().data.companyId == companyId) || 
          isSuperAdmin()
        );

        match /shifts/{shiftId} {
           allow read, write: if isCompanyStaff(companyId) || isSuperAdmin();
        }
        
        match /alerts/{alertId} {
           allow read, write: if isCompanyStaff(companyId) || isSuperAdmin();
        }
        
        // --- Venue Specific Configs ---
        match /config/{configId} {
           allow read: if isCompanyStaff(companyId);
           allow write: if request.auth != null && (
             (getAuthUser().data.role == 'owner' && getAuthUser().data.companyId == companyId) || 
             isSuperAdmin()
           );
        }
      }
      
      // --- Watchlist / Banned People ---
      match /banned_people/{banId} {
         // Security and Owner/Manager only, NOT floor staff
         allow read, write: if (isCompanyStaff(companyId) && getAuthUser().data.role != 'floor_staff') || isSuperAdmin();
      }
    }
    
    // --- Customers (Stripe) ---
    match /customers/{uid} {
      allow read, write: if request.auth.uid == uid;
      match /checkout_sessions/{id} {
        allow read, write: if request.auth.uid == uid;
      }
      match /subscriptions/{id} {
        allow read: if request.auth.uid == uid;
      }
      match /payments/{id} {
        allow read: if request.auth.uid == uid;
      }
    }
  }
}
